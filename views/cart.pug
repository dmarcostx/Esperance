extends layout

block content
  section(class="cart")
    div(class="row-cart")
      div(class="col-4")
        h2='Carrinho de compras'
      div(class="col-8")
    div(class="row")
      if(carrinho == null || carrinho.length == 0)
        div(class="col-4")
        div(class="col-3")
          h1='Carrinho vazio'
      else
        div(class="col-1")
        div(class="col-7 horizontalCenter")
          table(class="table" id="cart")
            thead
              tr
                th(scope="col")='Produto'
                th(scope="col")='Quantidade'
                th(scope="col")='Pre√ßo'
            tbody
              -let valor=0
              each produto in carrinho
                tr
                  td=produto.nome
                  td=produto.qtd
                  td=produto.valor
                  -valor=valor+produto.valor*produto.qtd
        div(class="col-1")
        div(class="col-3")
          h3='Resumo do Pedido'
          p='Subtotal: R$ '+valor
          -valor=valor+12.9
          p='Frete: R$ 12,90'
          p='Valor total: R$ '+valor
          a(class="btn btn-secondary" href="/empty")='Limpar carrinho'
          span=' '
          a(class="btn btn-success" href="/buy")='Finalizar compra'
